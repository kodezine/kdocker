{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug STM32 (OpenOCD)",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/firmware.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "searchDir": [
                "/usr/share/openocd/scripts"
            ],
            "openOCDLaunchCommands": [
                "monitor arm semihosting enable"
            ],
            "svdFile": "${workspaceRoot}/docs/STM32F4xx.svd",
            "preLaunchTask": "Build Project",
            "postRestartCommands": [
                "monitor reset init"
            ]
        },
        {
            "name": "Debug STM32 (ST-Link GDB)",
            "type": "cppdbg", 
            "request": "launch",
            "program": "${workspaceRoot}/build/firmware.elf",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/home/kdev/gnuarm14.3/bin/arm-none-eabi-gdb",
            "miDebuggerServerAddress": "localhost:4242",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Project"
        },
        {
            "name": "Attach to OpenOCD",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/firmware.elf",
            "request": "attach", 
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f4x.cfg"
            ],
            "searchDir": [
                "/usr/share/openocd/scripts"
            ]
        }
    ]
}